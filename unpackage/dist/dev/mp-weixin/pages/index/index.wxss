.todolist {
  background-color: #3C3E4F;
  height: 753px;
  width: 390px;
  box-sizing: border-box;
  color: white;
  font-size: 14px;
}
.my-check {
  position: relative;
  box-sizing: border-box;
  height: 24px;
  width: 24px;
  border: grey solid 1px;
  border-radius: 50%;
  margin-right: 4px;
}
.my-check .my-check__inner {
  height: 16px;
  width: 16px;
  border-radius: 50%;
  background-color: #8585c2;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.myButton {
  border: #ccc 1px solid;
  width: 50px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 15px;
  margin: 4px;
}
.myButton .btn-text {
  position: relative;
  left: 0rpx;
  top: -1rpx;
  color: white;
}
.todolist__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 10px;
}
.todolist__header-left {
  padding-left: 8px;
  font-size: 24px;
  font-weight: bold;
}
.todolist__header-right {
  display: flex;
  align-items: center;
}
.todolist__header-right .select-all {
  background-color: #C43F38;
}
.todolist__header-right .add-btn {
  background-color: #70B870;
}
.todolist__content {
  overflow-y: scroll;
  margin-top: 20px;
}
.todolist__content .todolist__item {
  display: flex;
  align-items: center;
  margin: 0px 6px;
  justify-content: space-between;
  margin-bottom: 20px;
  background-color: #4C4E5F;
  border-radius: 4px;
  padding: 4px;
}
.todolist__content .todolist__item checkbox {
  margin: 6px;
}
.todolist__content .todolist__item .line-through {
  -webkit-text-decoration: line-through rgba(255, 255, 255, 0.8);
          text-decoration: line-through rgba(255, 255, 255, 0.8);
  color: rgba(255, 255, 255, 0.5);
}
.todolist__content .todolist__item input {
  flex: 1;
  padding: 4px;
  border-bottom: #ccc solid 1px;
}
.todolist__content .todolist__item .delete-btn {
  background-color: #C43F38;
}

