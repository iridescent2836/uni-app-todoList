<view class="todolist"><view class="todolist__header"><view class="todolist__header-left">Todo List</view><view class="todolist__header-right"><label><checkbox value="{{isHideChecked}}" data-event-opts="{{[['tap',[['hideChecked']]]]}}" bindtap="__e"></checkbox><text>隐藏已完成</text></label><view data-event-opts="{{[['tap',[['selectAll']]]]}}" class="myButton select-all" bindtap="__e"><view class="btn-text">全选</view></view><view data-event-opts="{{[['tap',[['addTodo']]]]}}" class="myButton add-btn" bindtap="__e"><view class="btn-text">添加</view></view></view></view><view class="todolist__content"><block wx:for="{{todoList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="todolist__item"><label><checkbox value="{{test}}" checked="{{item.isCheck}}" data-event-opts="{{[['tap',[['selectOne',['$0'],[[['todoList','id',item.id,'id']]]]]]]}}" bindtap="__e"></checkbox><text></text></label><input class="{{['uni-input',item.isCheck?'line-through':'']}}" focus="{{true}}" placeholder="请输入待办事项" disabled="{{item.isCheck}}" data-event-opts="{{[['blur',[['checkInput',['$0'],[[['todoList','id',item.id,'id']]]]]],['input',[['__set_model',['$0','content','$event',[]],[[['todoList','id',item.id]]]]]]]}}" value="{{item.content}}" bindblur="__e" bindinput="__e"/><view data-event-opts="{{[['tap',[['deleteTodo',['$0'],[[['todoList','id',item.id,'id']]]]]]]}}" class="myButton delete-btn" bindtap="__e"><view class="btn-text">删除</view></view></view></block></view></view>