<view class="todolist"><view class="todolist__header"><view class="todolist__header-left">Todo List</view><view class="todolist__header-right"><label><checkbox value="{{isHideChecked}}" data-event-opts="{{[['tap',[['hideChecked']]]]}}" bindtap="__e"></checkbox><text>隐藏已完成</text></label><button data-event-opts="{{[['tap',[['selectAll']]]]}}" class="select-all" bindtap="__e">全选</button><button data-event-opts="{{[['tap',[['addTodo']]]]}}" class="add-btn" bindtap="__e">添加</button></view></view><view class="todolist__content"><block wx:for="{{todoList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="todolist__item"><label><checkbox value="{{test}}" checked="{{item.isCheck}}" data-event-opts="{{[['tap',[['selectOne',['$0'],[[['todoList','id',item.id,'id']]]]]]]}}" bindtap="__e"></checkbox><text></text></label><input class="uni-input" focus="{{true}}" placeholder="自动获得焦点" data-event-opts="{{[['blur',[['checkInput',['$0'],[[['todoList','id',item.id,'id']]]]]],['input',[['__set_model',['$0','content','$event',[]],[[['todoList','id',item.id]]]]]]]}}" value="{{item.content}}" bindblur="__e" bindinput="__e"/><button data-event-opts="{{[['tap',[['deleteTodo',['$0'],[[['todoList','id',item.id,'id']]]]]]]}}" class="delete-btn" bindtap="__e">删除</button></view></block></view></view>